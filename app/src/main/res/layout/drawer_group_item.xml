<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_list_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/groupbackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/drawer_group_icon"
        android:layout_width="wrap_content"
        android:alpha="0.5"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/drawer_group_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/groupcolor"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">
    </TextView>
    <ImageView
        android:id="@+id/drawer_group_indicator"
        android:layout_width="wrap_content"
        android:alpha="0.7"
        android:layout_height="wrap_content" />

</LinearLayout>